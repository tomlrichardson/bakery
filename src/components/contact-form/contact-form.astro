---
const block = Astro.props;
---

<section class="contact-form flex px-4 py-[96px]">
  <div class="w-1/2 px-8">
    <h2>Contact Us</h2>
    <p class="max-w-[24rem]">
      Get in touch to order bread, enquire about wholesale, or ask us a
      question!
    </p>
  </div>
  <div class="w-1/2">
    <form method="post" action="/success.html" class="flex flex-col gap-8">
      <div class="text-input-group">
        <label>Email Address</label>
        <input type="text" name="email" />
      </div>
      <div class="text-input-group">
        <label>Name</label>
        <input type="text" name="name" />
      </div>
      <div class="text-input-group">
        <label>Message</label>
        <textarea name="message"></textarea>
      </div>
      <div class="check-input-group gap-2">
        <label>Type of Enquiry</label>
        <div class="flex flex-col gap-2">
          <div class="">
            <input type="radio" name="_subject" value="Sales Enquiry" />
            <label>Sales</label>
          </div>
          <div class="">
            <input type="radio" name="_subject" value="General Enquiry" />
            <label>General</label>
          </div>
        </div>
      </div>
      <!-- <input type="hidden" name="inbox_key" value="contact_inbox" />
      <input
        type="hidden"
        name="_to"
        value="sales@example.com,support@example.com"
      />
      <input type="hidden" name="_cc" value="sales.tracker@example.com" />
      <input type="text" name="_gotcha" style="display: none;" /> -->

      <input type="submit" value="Send Message" />
    </form>
  </div>
</section>

<style>
  .contact-form {
    max-width: var(--largeContainer);
    margin: 0 auto;
  }
  input,
  textarea {
    border: 1px solid #f1f1f1;
    border-radius: 8px;
    max-width: 32rem;
  }
  .text-input-group,
  .check-input-group {
    display: flex;
    flex-direction: column;
  }
</style>
