---
const block = Astro.props;
---

<div class={'left-right'}>
  <div class={'left-right__wrapper'}>
    <img class={'left-right__img'} src={block.image} alt={block.image_alt} />
    <div class={'left-right__text'}>
      <h2>
        {block.heading}
      </h2>
      <p>{block.text}</p>
    </div>
  </div>
</div>

<style>
  .left-right {
    position: relative;
    z-index: 10;
    display: flex;
    padding-inline: 1rem;
    padding-block: 36px;
    align-items: center;
    overflow: hidden;
  }

  .left-right__wrapper {
    position: relative;
    z-index: 10;
    width: 100%;
    max-width: 1280px;
    margin: 90px auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
    padding-block: 96px;
    padding-inline: 48px;
  }

  .left-right__text {
    max-width: 600px;
    font-size: 1.25rem;
    color: rgb(59, 61, 62);
    line-height: 1.75rem;
  }

  .left-right__text p {
    margin-bottom: 1.5rem;
  }

  .left-right__img {
    margin-top: 32px;
    min-width: 50%;
    max-width: 618px;
  }

  h2,
  p {
    color: inherit;
  }

  h2 {
    max-width: 620px;
    margin-top: 60px;
    margin-bottom: 30px;
    font-size: 2.5rem;
    font-weight: bold;
  }

  p {
    font-weight: lighter;
    overflow-wrap: break-word;
    max-width: 840px;
    margin-bottom: 60px;
    line-height: 1.7rem;
    letter-spacing: 1px;
  }
  @media only screen and (min-width: 960px) {
    .left-right__wrapper {
      flex-direction: row;
      padding-inline: 48px;
      gap: 4rem;
    }
  }
  @media only screen and (min-width: 1020px) {
    p {
      font-size: 1.25rem;
    }
    h2 {
      font-size: 3.25rem;
    }
  }
  @media only screen and (min-width: 1280px) {
    .left-right__wrapper {
      flex-direction: row;
      padding-inline: 48px;
      gap: 10rem;
    }
  }
</style>
