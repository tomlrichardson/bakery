---
import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';
import Button from '../utility/button.astro';

interface Props {
  image_path: string;
  image_alt: string;
  heading: {
    heading_text: string;
    heading_color: string;
  };
  subheading: {
    subheading_text: string;
    subheading_color: string;
  };
  button: {
    button_text: string;
    button_icon: string;
    button_link: string;
    background_color: string;
    hover_brightness: number;
    text_color: string;
  };
}

const block = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>(
  '/src/assets/**/*.{jpeg,jpg,png,gif,svg}',
  { eager: true }
);

const imageSrc = images[block.image_path]?.default ?? block.image_path;
---

<section class="hero">
  <div class="hero__container">
    <h1 class="hero__title" style={`color: ${block.heading.heading_color}`}>
      {block.heading.heading_text}
    </h1>
    <p
      class="hero__subtitle"
      style={`color: ${block.subheading.subheading_color}`}>
      {block.subheading.subheading_text}
    </p>
    {
      block.button.button_text ? (
        <div class="button">
          <Button
            button_link={block.button.button_link}
            button_text={block.button.button_text}
            background_color={block.button.background_color}
            text_color={block.button.text_color}
            button_icon={block.button.button_icon}
            hover_brightness={block.button.hover_brightness}
          />
        </div>
      ) : null
    }
  </div>

  <Image
    class="hero__bg-img"
    alt={block.image_alt}
    src={imageSrc}
    width={4000}
    height={400}
    widths={[360, 720, 1280]}
    sizes={`(max-width: 360px) 360px, (max-width: 720px) 720px, (max-width: 1600px) 1600px`}
  />
</section>

<style>
  .hero {
    background-size: cover;
    background-repeat: no-repeat;
    position: relative;
  }

  .hero__bg-img {
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    z-index: -1;
    height: 100%;
    width: 100%;
    object-fit: cover;
    object-position: 0 40%;
    filter: brightness(0.75);
  }

  .hero__container {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    max-width: var(--pageContainer);
    padding-block: 24px;
    padding-inline: var(--pagePadding);
    margin: 0 auto;
  }

  .hero__title,
  .hero__subtitle {
    color: inherit;
    text-shadow: 0px 2px 1px #00000047;
  }

  .hero__title {
    line-height: 1;
    margin-inline-start: -3px;
  }
  .hero__container h1 {
    font-size: 3.5rem;
  }

  .hero__subtitle {
    padding-top: 16px;
    max-width: 72ch;
    font-size: 1.25rem;
    font-weight: 200;
    letter-spacing: 1.5px;
    line-height: 1.75rem;
  }

  .button {
    padding-top: 48px;
  }
  @media screen and (min-width: 340px) {
    .hero__container h1 {
      font-size: 4rem;
    }
  }
  @media screen and (min-width: 380px) {
    .hero__container h1 {
      font-size: 5rem;
    }
  }
  @media screen and (min-width: 460px) {
    .hero__container h1 {
      font-size: 5.5rem;
    }
  }
  @media screen and (min-width: 500px) {
    .hero__container h1 {
      font-size: 6rem;
    }
  }
  @media screen and (min-width: 540px) {
    .hero__container h1 {
      font-size: 4rem;
    }
  }
  @media screen and (min-width: 768px) {
    .hero__container {
      padding-block: 48px;
    }
    .hero__container h1 {
      font-size: 6rem;
    }

    .button {
      padding-top: 64px;
    }
  }
  @media screen and (min-width: 980px) {
    .hero__container h1 {
      font-size: 8rem;
    }
  }
  @media screen and (min-width: 1280px) {
    .hero__container h1 {
      font-size: 10.5rem;
    }
  }
</style>
