---
import { header, logo, logo_url } from '../../../data/navigation.json';
---

<header class="header" x-data="{ open: false }">
  <div class="header__container">
    <nav class="header__nav">
      <a class="header__logo-link" href={logo_url}>
        <img class="header__logo-image" src={logo} alt="Logo" />
      </a>
      <button class="hamburger" @click="open = ! open">
        <a class="hamburger__inner"></a>
      </button>
      <ul
        class="header__nav-links"
        x-show="open"
        x-transition
        @click.outside="open = false">
        {
          header.links.map((link) => {
            return (
              <li class="header__nav-item">
                <a class="header__nav-link" href={link.url}>
                  {link.text}
                </a>
              </li>
            );
          })
        }
      </ul>
    </nav>
  </div>
</header>

<style>
  .header {
    position: absolute;
    top: 0;
    z-index: 10;
    display: grid;
    grid-template-columns: var(--twelveColumnGrid);
    min-width: 100vw;
    height: var(--headerHeight);
  }

  .header__container {
    max-width: var(--largeContainer);
    grid-column: 2 / -2;
  }

  .header li {
    list-style-type: none;
  }

  .header__nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-block: 1rem;
  }

  .header__logo-image {
    width: 64px;
    rotate: 0deg;
  }
  .header__logo-image:hover {
    rotate: -10deg;
    transition: rotate 0.25s;
  }
  .header__logo-image:not(:hover) {
    transition: rotate 0.25s;
  }
  .header__logo-image: {
    rotate: -10deg;
    transition: rotate 0.5s;
  }

  .header__nav-links {
    position: absolute;
    z-index: 20;
    right: 0;
    top: 0;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    gap: 1rem;
    min-width: 200px;
    padding: 1rem;
    padding-top: calc(var(--headerHeight) + 2rem);
    border-radius: 6px;
    background-color: black;
  }

  .header__nav-link {
    color: white;
  }
  @media screen and (min-width: 800px) {
    .header__nav-links {
      position: static;
      display: flex !important;
      flex-direction: row;
      justify-content: flex-end;
      padding: 0;
      min-width: none;
      background-color: transparent;
    }
  }

  @media screen and (min-width: 800px) {
    .header__nav-item {
      padding-left: 1rem;
    }
  }

  .hamburger {
    position: relative;
    z-index: 30;
    border: none;
    cursor: pointer;
    height: 2rem;
    width: 2rem;
  }

  @media screen and (min-width: 800px) {
    .hamburger {
      display: none;
    }
  }
  .hamburger__inner,
  .hamburger__inner::before,
  .hamburger__inner::after {
    display: block;
    width: 2rem;
    height: 0.25rem;
    background-color: #fff;
  }
  .hamburger__inner::before,
  .hamburger__inner::after {
    content: '';
    display: block;
    position: relative;
  }
  .hamburger__inner::before {
    top: -0.625rem;
  }
  .hamburger__inner::after {
    top: 0.4rem;
  }
</style>
