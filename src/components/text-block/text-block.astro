---
const block = Astro.props;
---

<div class="text">
  <div class="text__container">{block.text}</div>
</div>

<style>
  .text {
    display: grid;
    grid-template-columns: var(--twelveColumnGrid);
    padding-top: 96px;
  }
  .text__container {
    max-width: var(--largeContainer);
    grid-column: 2 / -2;
  }
  h1 {
    font-size: 3rem;
    font-weight: 600;
  }
  h2 {
    font-size: 2rem;
    font-weight: 600;
  }
  h3 {
    font-size: 1.5rem;
    font-weight: 600;
  }
  p {
    margin-bottom: 1rem;
  }
</style>
