    width: 100%;
  }

  .slider-text {
    display: flex;
    flex-direction: column;
    width: 100%;
  }
  .slider-heading {
    font-size: 2.5rem;
  }

  .swiper-slide-contents {
    padding-inline: 5rem;
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  .swiper-slide-active .swiper-slide-contents {
