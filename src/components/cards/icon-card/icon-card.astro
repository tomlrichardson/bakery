---
import Icon from '../../utility/icon.jsx';

interface Props {
  heading: string;
  text: string;
  icon: string;
  link: string;
  backgroundImage: string;
  backgroundColor: string;
  columnSpan: number;
}

const block = Astro.props;
---

<a
  class="card"
  href={block.link}
  style={block.backgroundImage
    ? `background-image: url(${block.backgroundImage}); grid-column: span ${block.columnSpan};`
    : `background-color: ${block.backgroundColor}; grid-column: span ${block.columnSpan};`}>
  <div class="icon">
    <Icon icon={block.icon} />
  </div>
  <h3>{block.heading}</h3>
  <p>{block.text}</p>
</a>

<style>
  .card {
    padding-block: 3rem;
    min-height: 250px;
    background-size: cover;
    background-repeat: no-repeat;
    /* box-shadow: rgba(149, 157, 165, 0.2) 0px 8px 24px; */
    border-radius: 8px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-evenly;
    text-align: center;
  }
  .card p {
    font-weight: 300;
  }
  .icon {
    width: 50px;
    height: 50px;
  }
  @media screen and (max-width: 800px) {
    .card {
      grid-column: span 1 !important;
    }
  }
</style>
