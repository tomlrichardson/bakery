---
import { footer, logo, logo_url } from '../../../data/navigation.json';
import Icon from '../utility/icon';
---

<footer class="bg-slate-700 text-white">
  <div class="footer grid grid-cols-3 items-end py-[48px]">
    <p>&#169; {new Date().getFullYear()} {footer.copyright}</p>
    <div class="flex flex-col gap-8 items-center">
      <a href={logo_url}>
        <img
          class="footer__logo-image"
          src={logo}
          alt="Body of the Year Logo"
        />
      </a>
      <ul class="flex gap-4">
        {
          footer.social.map((link) => {
            return (
              <li class="w-[2rem]">
                <a href={link.url}>
                  <Icon icon={link.social_icon} />
                </a>
              </li>
            );
          })
        }
      </ul>
    </div>
    <ul class="flex flex-col items-end">
      {
        footer.links.map((link) => {
          return (
            <li>
              <a href={link.url}>{link.text}</a>
            </li>
          );
        })
      }
    </ul>
  </div>
</footer>

<style>
  .footer {
    max-width: var(--pageContainer);
    padding-inline: var(--pagePadding);
    display: grid;
    margin: 0 auto;
  }
  .footer__logo-image {
    display: block;
    width: 64px;
    transform: rotate(0deg);
    transition: all 0.125s ease-in-out;
  }
  .footer__logo-image:hover {
    transform: rotate(-10deg);
  }
</style>
