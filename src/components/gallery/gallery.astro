---
import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';

interface Props {
  images: [
    {
      image_path: string;
      image_alt: string;
    },
  ];
}

const block = Astro.props;
const fallbackSlide = block.images[0];
const images = import.meta.glob<{ default: ImageMetadata }>(
  '/src/assets/**/*.{jpeg,jpg,png,gif,svg,JPG}',
  { eager: true }
);
const fallbackSlideSrc =
  images[fallbackSlide.image_path]?.default ?? fallbackSlide.image_path;
---

{
  ENV_BOOKSHOP_LIVE ? (
    <div class="slide">
      <Image
        class="order-2 md:order-1"
        alt={fallbackSlide.image_alt}
        widths={[320, 500, 640]}
        sizes={`(max-width: 640px) 320px, (max-width: 960px) 500px, (max-width: 1280px) 640px`}
        src={fallbackSlideSrc}
      />
    </div>
  ) : (
    <swiper-container
      slides-per-view="1"
      loop="true"
      autoplay="false"
      pagination="true"
      navigation="true">
      {block.images.map((image: any) => {
        const imageSrc = images[image.image_path]?.default ?? image.image_path;
        return (
          <swiper-slide>
            <div class="slide">
              <Image
                class="order-2 md:order-1"
                alt={image.image_alt}
                widths={[320, 500, 640]}
                sizes={`(max-width: 640px) 320px, (max-width: 960px) 500px, (max-width: 1280px) 640px`}
                src={imageSrc}
              />
            </div>
          </swiper-slide>
        );
      })}
    </swiper-container>
  )
}

<style>
  #slideshow {
    overflow: hidden;
    width: 100%;
    margin: 0 auto;
  }

  .slide-wrapper {
    display: flex;
    width: 200%;
  }

  .slide-container {
    display: flex;
    flex-direction: row;
    padding-block: 48px;
    height: 95vh;
    gap: 20px;
    align-items: end;
    padding-inline: var(--pagePadding);
    max-width: var(--pageContainer);
    margin-inline: auto;
    overflow: hidden;
  }

  .slide {
    width: 100vw;
    height: 100vh;
    background-size: cover;
    background-position-y: 90%;
  }
  .slide img {
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position-y: 90%;
  }
</style>
