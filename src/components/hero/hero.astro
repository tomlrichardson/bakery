---
import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';
import Button from '../utility/button.astro';

interface Props {
  image_path: string;
  image_alt: string;
  title: string;
  subtitle: string;
  button: {
    text: string;
    link: string;
    background_color: string;
    text_color: string;
  };
}

const block = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>(
  '/src/assets/**/*.{jpeg,jpg,png,gif,svg,JPG}',
  { eager: true }
);

const imageSrc = images[block.image_path]?.default ?? block.image_path;
---

<section class="hero">
  <div class="hero__container">
    <h1 class="hero__title">{block.title}</h1>
    <p class="hero__subtitle">{block.subtitle}</p>
    {
      block.button.text ? (
        <div class="button">
          <Button
            link={block.button.link}
            text={block.button.text}
            backgroundColor={block.button.background_color}
            textColor={block.button.text_color}
          />
        </div>
      ) : null
    }
  </div>

  <Image
    class="hero__bg-img"
    alt={block.image_alt}
    src={imageSrc}
    width={4000}
    height={400}
    widths={[360, 720, 1280]}
    sizes={`(max-width: 360px) 360px, (max-width: 720px) 720px, (max-width: 1600px) 1600px`}
  />
</section>

<style>
  .hero {
    background-size: cover;
    background-repeat: no-repeat;
    position: relative;
    padding-top: var(--headerHeight);
  }

  .hero__bg-img {
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    z-index: -1;
    height: 100%;
    width: 100%;
    object-fit: cover;
    object-position: 0 40%;
    filter: brightness(0.75);
  }

  .hero__container {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    max-width: var(--pageContainer);
    padding-block: 96px;
    padding-inline: var(--pagePadding);
    margin: 0 auto;
    color: white;
  }

  .hero__title,
  .hero__subtitle {
    color: inherit;
    text-shadow: 0px 2px 1px #00000047;
  }

  .hero__title {
    line-height: 1;
    margin-inline-start: -3px;
  }
  .hero__container h1 {
    font-size: 4rem;
  }

  .hero__subtitle {
    padding-top: 16px;
    max-width: 420px;
    line-height: 1.75rem;
  }

  .button {
    padding-top: 40px;
  }
  @media screen and (min-width: 400px) {
    .hero__container h1 {
      font-size: 6rem;
    }
  }
  @media screen and (min-width: 768px) {
    .hero__container h1 {
      font-size: 8rem;
    }
  }
  @media screen and (min-width: 1024px) {
    .hero__container {
      padding-block: 96px;
    }
    .hero__container h1 {
      font-size: 10rem;
    }
  }
</style>
